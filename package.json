{
    "name": "todopomo",
    "displayName": "TodoPomo",
    "icon": "images/icon.png",
    "description": "",
    "author": {
        "name": "Easton Lee",
        "email": "me@eastonlee.com"
    },
    "bugs": {
        "url": "https://github.com/easton042/TodoPomo/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/easton042/TodoPomo"
    },
    "version": "0.0.1",
    "publisher": "eastonlee",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onCommand:todopomo.start",
        "onCommand:todopomo.pause",
        "onCommand:todopomo.stop",
        "onCommand:todopomo.report"
    ],
    "main": "./out/src/extension",
    "contributes": {
            "type": "object",
            "title": "TodoPomo Configurations",
            "properties": {
                "todopomo.task_duarion": {
                    "type": "number",
                    "default": 25,
                    "description": "The default duration of a TodoPomo Task in minutes"
                },
                "todopomo.break_duarion": {
                    "type": "number",
                    "default": 5,
                    "description": "The default duration of a Break in minutes"
                },
                "todopomo.long_break_duarion": {
                    "type": "number",
                    "default": 15,
                    "description": "The default duration of a long Break in minutes"
                },
                "todopomo.counter_to_long_break": {
                    "type": "number",
                    "default": 3,
                    "description": "number of regular breaks before a long break"
                },
                "todopomo.tasks_file": {
                    "type": "string",
                    "description": "full path to the tasks.json file"
                }
            }

    },
    "commands": [
            {
                "command": "todopomo.start",
                "title": "Todopomo: Start Task"
            },
            {
                "command": "todopomo.pause",
                "title": "Todopomo: Pause Task"
            },
            {
                "command": "todopomo.stop",
                "title": "Todopomo: Stop Task"
            },
            {
                "command": "todopomo.report",
                "title": "Todopomo: Report Tasks"
            }
    ],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}